{
  "compilerOptions": {
    "module": "commonjs",
    "noLib": false,
    "skipLibCheck": true,
    "lib": ["es2017", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": false,
    "newLine": "LF",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "migration.ts",
    "dist",
    "admin-ui",
    "sql",
    "static",
    "src/plugins/vendure-bulk-discounts/ui-extensions"
  ]
}
