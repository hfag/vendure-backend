<mjml>
    <mj-head>
        <mj-title>{{ title }}</mj-title>
        <mj-font name="Helvetica Neue Condensed" href="https://feuerschutz.ch/fonts.css" />
        <mj-raw>
            <style type="text/css">
                table { page-break-inside:auto }
                tr    { page-break-inside:avoid; page-break-after:auto }
                
                .print-onlyÂ {
                    display: none;
                    width: 0px;
                }

                @media print {
                    body .callout, body .print-white, body .print-white>table {
                        background-color: #FFFFFF !important;
                    }

                    body .print-text-black, body .callout-large>div, body .callout-small>div {
                        color: #000 !important;
                    }

                    body .print-invisible {
                        display: none !important;
                    }

                    body table td {
                        padding-top: 0 !important;
                        padding-bottom: 0 !important;
                    }

                    body .print-collapse-table table, body .print-collapse-table thead, body .print-collapse-table tbody, body .print-collapse-table tr, body .print-collapse-table td, body .print-collapse-table td>div {
                        display: block !important;
                        padding-top: 0 !important;
                        padding-bottom: 0 !important;
                    }

                    body .print-collapse-table td div table, body .print-collapse-table td div thead, body .print-collapse-table td div tbody, body .print-collapse-table td div tr, body .print-collapse-table td div td {
                        display: inline-block !important;
                        padding-top: 0 !important;
                        padding-bottom: 0 !important;
                    }

                    body .callout-large>div>strong, body.callout-small>div{
                        text-align: left !important;
                        font-weight: normal;
                        font-size: 13px;
                    }

                    body .callout-large>div>strong::after{
                        content:":";
                    }

                    
                    body .callout-small{
                        padding: 0 !important;
                    }

                    body .print-fix-50{
                        width: 50% !important;
                    }

                    body .logo{
                        padding-bottom: 16px;
                    }

                    .print-only {
                        display: block !important;
                    }
                }
            </style>
        </mj-raw>
    </mj-head>
    <mj-body>
        <mj-section css-class="logo" background-color="white" padding="10px 0 5px 0">
            <mj-column>
                <mj-image align="left" width="350px" src="https://api.feuerschutz.ch/wp-content/themes/feuerschutz-shop/img/mail/mail_header.png" />
            </mj-column>
        </mj-section>
        {{#if noGreetings}}
        {{else}}
        <mj-section background-color="white" padding="5px 0 0 0">
            <mj-column>
                <mj-text font-family="'Helvetica Neue Condensed', sans-serif">
                    Cher client
                </mj-text>
            </mj-column>
        </mj-section>
        {{/if}}