{{> header title="Order Receipt" noGreetings="true" noLogo="true" }}

<mj-raw>
    <style type="text/css">
        h3 {
            margin: 0;
        }

        .products th {
            word-break: keep-all;
        }
        
        .products td, .products th {
          text-align: left;
          border: #000 1px solid;
          padding: 4px 8px;
        }
        .products th {
          font-weight: bold;
        }

        ul.address {
          list-style-type: none;
          padding: 0;
          margin: 0;
        }

        tr.order-row td:last-child {
          text-align: right;
        }

        .line-price {
            white-space: nowrap;
        }
    </style>
</mj-raw>

<mj-section background-color="white" padding="0">
    <mj-column>
    <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
        <h3>New order</h3>
        Order ID {{ order.id }} ({{ formatDate order.orderPlacedAt }}) by {{ order.billingAddress.fullName }} ({{ groups }})
    </mj-text>
    </mj-column>
</mj-section>

<mj-section background-color="white" padding="0">
    <mj-column>
        <mj-table
            css-class="products"
            font-family="'Helvetica Neue Condensed', sans-serif"
        >
            {{#each order.lines }}
            <tr class="order-row">
                <td>
                    <b>{{ productVariant.sku }}</b>, {{ productVariant.name }}
                    <br />
                    {{ description }}
                </td>
                <td>{{ quantity }}</td>
                <td class="line-price">
                    CHF {{ formatMoney proratedLinePrice }}
                </td>
            </tr>
            {{/each}}
            <tr class="order-row">
                <td colspan="2"><b>Subtotal:</b></td>
                <td>CHF {{ formatMoney order.subTotal }}</td>
            </tr>
            <tr class="order-row">
                <td colspan="2"><b>Shipping:</b></td>
                <td>CHF {{ formatMoney order.shipping }}</td>
            </tr>
            <tr class="order-row">
                <td colspan="2"><b>Taxes:</b></td>
                <td>CHF {{ formatMoney order.totalTaxes }}</td>
            </tr>
            <tr class="order-row total-row">
                <td colspan="2"><b>Total:</b></td>
                <td>CHF {{ formatMoney order.totalWithTax }}</td>
            </tr>
        </mj-table>
    </mj-column>
</mj-section>

<mj-section background-color="white" padding="10px 0">
    <mj-column css-class="print-fix-50">
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            {{#with order.billingAddress }}
            <h3>Billing to:</h3>
            <ul class="address">
                <li>{{ fullName }}</li>
                {{#if company}}
                <li>{{ company }}</li>
                {{/if}}
                {{#if streetLine1}}
                <li>{{ streetLine1 }}</li>
                {{/if}}
                {{#if streetLine2}}
                <li>{{ streetLine2 }}</li>
                {{/if}}
                {{#if city}}
                <li>{{ city }}</li>
                {{/if}}
                {{#if province}}
                <li>{{ province }}</li>
                {{/if}}
                {{#if postalCode}}
                <li>{{ postalCode }}</li>
                {{/if}}
                {{#if country}}
                <li>{{ country }}</li>
                {{/if}}
                {{#if phoneNumber}}
                <li>{{ phoneNumber }}</li>
                {{/if}}
            </ul>
            {{/with}}
        </mj-text>
    </mj-column>
    <mj-column css-class="print-fix-50">
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            {{#with order.shippingAddress }}
            <h3>Shipping to:</h3>
            <ul class="address">
                <li>{{ fullName }}</li>
                {{#if company}}
                <li>{{ company }}</li>
                {{/if}}
                {{#if streetLine1}}
                <li>{{ streetLine1 }}</li>
                {{/if}}
                {{#if streetLine2}}
                <li>{{ streetLine2 }}</li>
                {{/if}}
                {{#if city}}
                <li>{{ city }}</li>
                {{/if}}
                {{#if province}}
                <li>{{ province }}</li>
                {{/if}}
                {{#if postalCode}}
                <li>{{ postalCode }}</li>
                {{/if}}
                {{#if country}}
                <li>{{ country }}</li>
                {{/if}}
                {{#if phoneNumber}}
                <li>{{ phoneNumber }}</li>
                {{/if}}
            </ul>
            {{/with}}
        </mj-text>
    </mj-column>
</mj-section>

{{#if order.customFields.notes }}
<mj-section background-color="white" padding="0">
    <mj-column>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            Customer comment: {{ order.customFields.notes }}
        </mj-text>
    </mj-column>
</mj-section>
{{/if}}

{{> footer noFooter="true" }}