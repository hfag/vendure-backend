{{> header title="Reset password" }}

<mj-section background-color="white">
    <mj-column>
        <mj-text font-family="'Roboto Condensed', sans-serif" line-height="1.5" font-weight="300">
            Someone requested a new password for your account.
        </mj-text>

        <mj-button font-family="'Roboto Condensed', sans-serif" background-color="#353535" color="white"
            href="{{ frontendUrl }}/de/passwort-vergessen?token={{ passwordResetToken }}">
            Reset password
        </mj-button>
        <mj-text font-family="'Roboto Condensed', sans-serif" line-height="1.5" font-weight="300">
            If you didn't make this request then you can safely ignore this email - nothing has been changed on your
            account.
        </mj-text>
    </mj-column>
</mj-section>


{{> footer }}