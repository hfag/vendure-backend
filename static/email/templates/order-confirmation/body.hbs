{{> header title="Order Receipt" }}

<mj-raw>
    <style type="text/css">
        .callout {
            background-color: #f5f5f5;
            padding: 15px 0;
        }

        h3, .callout-large>div{
          font-size: 16px !important;
          font-weight: bold;
          margin: 0;
        }

        .callout-large>div {
          text-align: center !important;
          padding: 0;
        }

        .callout-small>div {
            text-align: center !important;
            color: #fff !important;
            font-size: 14px !important;
            padding: 0;
        }

        ul.address {
            list-style-type: none;
            padding: 0;
        }

        tr.order-row td {
            border-bottom: 1px dashed #eee;
        }

        tr.order-row td:last-child {
            text-align: center;
        }

        tr.total-row {
            font-weight: bold;
        }
    </style>
</mj-raw>

<mj-section background-color="white" padding="0 0 10px 0">
    <mj-column>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            Thank you for your order!
        </mj-text>
    </mj-column>
</mj-section>


<mj-section css-class="callout print-collapse-table" padding="10px 0">
    <mj-column>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" css-class="callout-large"><strong>Order Code</strong>
        </mj-text>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" css-class="callout-small">{{ order.id }}</mj-text>
    </mj-column>
    <mj-column>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" css-class="callout-large"><strong>Order Date</strong>
        </mj-text>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" css-class="callout-small">
            {{ formatDate order.orderPlacedAt "dd.mm.yyyy" }}
        </mj-text>
    </mj-column>
    <mj-column css-class="print-invisible">
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" css-class="callout-large"><strong>Total Price</strong>
        </mj-text>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" css-class="callout-small">CHF {{ formatMoney order.total
            }}
        </mj-text>
    </mj-column>
</mj-section>


<mj-section background-color="white" padding="10px 0">
    <mj-column css-class="print-fix-50">
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            {{#with order.billingAddress }}
            <h3>Shipping To: {{ fullName }}</h3>
            <ul class="address">
                {{#if company}}
                <li>{{ company }}</li>
                {{/if}}
                {{#if streetLine1}}
                <li>{{ streetLine1 }}</li>
                {{/if}}
                {{#if streetLine2}}
                <li>{{ streetLine2 }}</li>
                {{/if}}
                {{#if city}}
                <li>{{ city }}</li>
                {{/if}}
                {{#if province}}
                <li>{{ province }}</li>
                {{/if}}
                {{#if postalCode}}
                <li>{{ postalCode }}</li>
                {{/if}}
                {{#if country}}
                <li>{{ country }}</li>
                {{/if}}
                {{#if phoneNumber}}
                <li>{{ phoneNumber }}</li>
                {{/if}}
            </ul>
            {{/with}}
        </mj-text>
    </mj-column>
    <mj-column css-class="print-fix-50">
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            {{#with order.shippingAddress }}
            <h3>Shipping To: {{ fullName }}</h3>
            <ul class="address">
                {{#if company}}
                <li>{{ company }}</li>
                {{/if}}
                {{#if streetLine1}}
                <li>{{ streetLine1 }}</li>
                {{/if}}
                {{#if streetLine2}}
                <li>{{ streetLine2 }}</li>
                {{/if}}
                {{#if city}}
                <li>{{ city }}</li>
                {{/if}}
                {{#if province}}
                <li>{{ province }}</li>
                {{/if}}
                {{#if postalCode}}
                <li>{{ postalCode }}</li>
                {{/if}}
                {{#if country}}
                <li>{{ country }}</li>
                {{/if}}
                {{#if phoneNumber}}
                <li>{{ phoneNumber }}</li>
                {{/if}}
            </ul>
            {{/with}}
        </mj-text>
    </mj-column>
</mj-section>

<mj-section background-color="white" padding="10px 0">
    <mj-column>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            <h3>Order Summary:</h3>
        </mj-text>
        <mj-table cellpadding="6px" font-family="'Helvetica Neue Condensed', sans-serif">
            {{#each order.lines }}
            <tr class="order-row">
                <td class="print-invisible">
                    {{#if productVariant.featuredAsset.preview}}
                    <img class="print-invisible" alt="{{ productVariant.name }}" style="width: 100px; height: 50px;"
                        src="{{ ../assetUrl }}/{{ productVariant.featuredAsset.preview }}?preset=small" />
                    {{/if}}
                </td>
                <td>
                    {{ quantity }} x {{ productVariant.name }}
                    <br />
                    {{ productVariant.sku }}
                    <br />
                    {{ description }}
                </td>
                <td class="print-only"></td>
                <td>CHF {{ formatMoney proratedLinePrice }}</td>
            </tr>
            {{/each}}
            <tr class="order-row">
                <td colspan="3">Sub-total:</td>
                <td>CHF {{ formatMoney order.subTotal }}</td>
            </tr>
            <tr class="order-row">
                <td colspan="3">Shipping:</td>
                <td>CHF {{ formatMoney order.shipping }}</td>
            </tr>
            <tr class="order-row">
                <td colspan="3">Taxes:</td>
                <td>CHF {{ formatMoney order.totalTaxes }}</td>
            </tr>
            <tr class="order-row total-row">
                <td colspan="3">Total:</td>
                <td>CHF {{ formatMoney order.totalWithTax }}</td>
            </tr>
        </mj-table>
    </mj-column>
</mj-section>

<mj-section background-color="white" padding="0">
    <mj-column>
        <mj-text font-family="'Helvetica Neue Condensed', sans-serif" line-height="1.5">
            Your comment: {{ order.customFields.notes }}
        </mj-text>
    </mj-column>
</mj-section>

{{> footer }}